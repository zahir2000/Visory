        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_radius_default" />
            <solid android:color="#ffebedf0" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_radius_default" />
            <solid android:color="#ffebedf0" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_radius_default" />
            <solid android:color="#ff3b5998" />
        </shape>
    </item>
</selector>