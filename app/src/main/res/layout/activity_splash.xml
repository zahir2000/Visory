<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    style="@style/MatchParent"
    android:background="@color/colorWhite"
    tools:context=".ui.SplashActivity">

    <LinearLayout
        style="@style/WrapContent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_splash_app_title"
            style="@style/WrapContent"
            android:fontFamily="@font/bad_script"
            android:gravity="center"
            android:padding="@dimen/spacing_sm"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/splash_main_text_size"
            tools:text="AppName" />

        <TextView
            android:id="@+id/text_splash_app_version"
            android:textColor="#dedede"
            style="@style/WrapContent"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            tools:text="1.0.0" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewSplashLogo"
        style="@style/WrapContent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/taruc_logo"
        android:layout_marginTop="248dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/taruc" />
</RelativeLayout>