<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_md"
    android:paddingTop="@dimen/spacing_md"
    android:paddingRight="@dimen/spacing_md"
    android:paddingBottom="@dimen/spacing_md">

    <androidx.cardview.widget.CardView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:cardCornerRadius="128dp">

        <ImageView
            android:id="@+id/image_profile_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/profile_img_cd"
            android:scaleType="centerCrop"
            android:src="@drawable/boku" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/profile_name"
        style="@style/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_spoken_lang"
        android:text="@string/default_name" />

    <TextView
        android:id="@+id/profile_joindate"
        style="@style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_spoken_lang"
        android:text="@string/default_date"
        android:textColor="#767676" />

    <TextView
        android:id="@+id/profile_language"
        style="@style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_sm"
        android:background="@drawable/text_rounded"
        android:gravity="center"
        android:paddingLeft="@dimen/spacing_md"
        android:paddingTop="@dimen/spacing_spoken_lang"
        android:paddingRight="@dimen/spacing_md"
        android:paddingBottom="@dimen/spacing_spoken_lang"
        android:text="@string/default_language"
        android:textColor="#767676" />

</LinearLayout>