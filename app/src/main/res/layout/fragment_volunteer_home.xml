<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_volunteer_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    tools:context=".volunteer.VolunteerHomeFragment">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/user_stats"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_md"
                android:layout_marginTop="@dimen/spacing_md"
                android:layout_marginRight="@dimen/spacing_md" />

            <include
                android:id="@+id/profileCardView"
                layout="@layout/profile_card"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_md"
                android:layout_marginTop="@dimen/spacing_md"
                android:layout_marginRight="@dimen/spacing_md" />

            <TextView
                android:id="@+id/textViewCallNotification"
                style="@style/TextAppearance.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_md"
                android:layout_marginTop="@dimen/spacing_md"
                android:layout_marginRight="@dimen/spacing_md"
                android:background="@drawable/text_rounded_white"
                android:paddingTop="@dimen/spacing_sm"
                android:paddingBottom="@dimen/spacing_sm"
                android:text="@string/text_notification_call"
                android:textColor="@color/colorGrey" />

            <include
                layout="@layout/empty_space"
                android:layout_width="wrap_content"
                android:layout_height="0.0dip"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/button_tutorial"
                style="@style/ButtonStyle.Primary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_md"
                android:layout_marginTop="@dimen/spacing_md"
                android:layout_marginRight="@dimen/spacing_md"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="@string/text_learn_to_answer_calls" />

            <Button
                android:id="@+id/button_blind_location_help"
                style="@style/ButtonStyle.Primary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_md"
                android:layout_marginTop="@dimen/spacing_md"
                android:layout_marginRight="@dimen/spacing_md"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="@string/text_blind_location_help"/>


            <Button
                android:id="@+id/button_trivia"
                style="@style/ButtonStyle.Primary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_md"
                android:layout_marginTop="@dimen/spacing_spoken_lang"
                android:layout_marginRight="@dimen/spacing_md"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="@string/text_trivia_game"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>