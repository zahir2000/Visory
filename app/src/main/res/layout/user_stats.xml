<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/stats"
    android:paddingTop="@dimen/spacing_md"
    android:paddingLeft="@dimen/spacing_md"
    android:paddingRight="@dimen/spacing_md"
    android:paddingBottom="@dimen/spacing_md"
    android:layout_width="fill_parent"
    android:id="@+id/user_stats_view"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<ImageView
        android:id="@+id/imageView"
        android:layout_width="75.0dip"
        android:layout_height="75.0dip"
        android:background="@drawable/image_rounded"
        tools:srcCompat="@tools:sample/avatars" />-->

    <!--<com.mikhaellopez.circularimageview.CircularImageView
